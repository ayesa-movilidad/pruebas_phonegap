<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
	id="es.juntadeandalucia.mapea.plancerro" versionCode="110" version="1.1.0">

	<name>Plan Cerro</name>
	<description>
		Plan Cerro
	</description>
	<author email="l-dirsigc.chap@juntadeandalucia.es" href="http://www.juntadeandalucia.es">
		Junta de Andalucía
	</author>
	<content src="index.html" />
	<access origin="*" />
	<access origin="tel:*" launch-external="yes" />
	<access origin="geo:*" launch-external="yes" />
	<access origin="mailto:*" launch-external="yes" />

	<preference name="android-minSdkVersion" value="23" />
	<preference name="android-targetSdkVersion" value="26" />
	<preference name="SuppressesIncrementalRendering" value="true" /> <!-- aumenta rendimiento en iOS -->
	<feature name="StatusBar">
		<param name="ios-package" value="CDVStatusBar" onload="true" />
	</feature>

	<!-- PERMISOS -->
	<preference name="permissions" value="none" />
	<feature name="http://api.phonegap.com/1.0/geolocation" />
	<feature name="http://api.phonegap.com/1.0/network" />

	<!-- PLUGINS -->
	<plugin name="cordova-plugin-dialogs" source="npm" version="2.0.1" />
	<plugin name="cordova-plugin-geolocation" source="npm" version="4.0.1" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" version="2.0.1" />
	<plugin name="cordova-plugin-splashscreen" source="npm" version="5.0.1" />
	<plugin name="cordova-plugin-statusbar" source="npm" version="2.4.1" />
	<plugin name="cordova-plugin-whitelist" source="npm" version="1.3.3" />
	<!--<plugin name="cordova.plugins.diagnostic" source="npm" version="4.0.1" />-->

	<!-- CONFIGURACIONES GÉNÉRICAS -->
	<preference name="SplashScreen" value="screen" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreenDelay" value="8000" />
	<preference name="FadeSplashScreen" value="false" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="SuppressesLongPressGesture" value="true" />
	<preference name="phonegap-version" value="cli-7.1.0" />
	<platform name="android">
		<preference name="android-installLocation" value="auto" />
		<icon src="resources/android/icon/drawable-xxxhdpi.png" density="xxxhdpi" />
		<icon src="resources/android/icon/drawable-xxhdpi.png" density="xxhdpi" />
		<icon src="resources/android/icon/drawable-xhdpi.png" density="xhdpi" />
		<icon src="resources/android/icon/drawable-hdpi.png" density="hdpi" />
		<icon src="resources/android/icon/drawable-mdpi.png" density="mdpi" />
		<icon src="resources/android/icon/drawable-ldpi.png" density="ldpi" />		
		<splash src="resources/android/splash/drawable-land-ldpi.png" density="land-ldpi" />
		<splash src="resources/android/splash/drawable-land-mdpi.png" density="land-mdpi" />
		<splash src="resources/android/splash/drawable-land-hdpi.png" density="land-hdpi" />
		<splash src="resources/android/splash/drawable-land-xhdpi.png" density="land-xhdpi" />
		<splash src="resources/android/splash/drawable-land-xxhdpi.png" density="land-xxhdpi" />
		<splash src="resources/android/splash/drawable-land-xxxhdpi.png" density="land-xxxhdpi" />
		<splash src="resources/android/splash/drawable-port-ldpi.png" density="port-ldpi" />
		<splash src="resources/android/splash/drawable-port-mdpi.png" density="port-mdpi" />
		<splash src="resources/android/splash/drawable-port-hdpi.png" density="port-hdpi" />
		<splash src="resources/android/splash/drawable-port-xhdpi.png" density="port-xhdpi" />
		<splash src="resources/android/splash/drawable-port-xxhdpi.png" density="port-xxhdpi" />
		<splash src="resources/android/splash/drawable-port-xxxhdpi.png" density="port-xxxhdpi" />
	</platform>

</widget>
